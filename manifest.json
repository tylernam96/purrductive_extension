{
  "manifest_version": 3,
  "name": "Purrductive",
  "version": "1.0",
  "description": "A productivity tracker with a virtual cat companion",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Purrductive"
  },
  
  "icons": {
    "16": "icons/cat16.png",
    "48": "icons/cat48.png",
    "128": "icons/cat128.png"
  }
}